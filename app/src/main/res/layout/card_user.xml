<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:layout_margin="@dimen/margin_smallest"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/img_user_avatar"
        android:layout_width="@dimen/card_height"
        android:layout_height="@dimen/card_height"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/text_user_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_message_user"
        style="@style/TextMessage"/>

    <TextView
        android:id="@+id/text_user_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextTime"/>

</LinearLayout>
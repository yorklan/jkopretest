<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/img_user_avatar"
        android:layout_width="@dimen/card_height"
        android:layout_height="@dimen/card_height"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/text_user_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/card_height"
        android:gravity="center"
        android:singleLine="false"
        android:paddingStart="@dimen/margin_smallest"
        android:paddingEnd="@dimen/margin_smallest"/>

    <TextView
        android:id="@+id/text_user_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:textSize="@dimen/card_time"/>

</LinearLayout>